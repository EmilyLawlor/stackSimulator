<?xml version="1.0"?>
<project name="Project" default="init">

    <description>
        Build file for project
    </description>

    <property name="src" location="src"/>
    <property name="classes" location="classes"/>

    <target name="init" description="setting up directory needed for compiled files">
        <mkdir dir="${classes}"/>
    </target>

    <target name="compile" description="compile java files" depends="init">
        <javac srcdir="${src}" destdir="${classes}"/>
    </target>

    <target name="compress" description="creates .jar file for the project" depends="compile">
        <jar jarfile="Main.jar" manifest="manifest.txt" basedir="." includes="*.class"/>
    </target>

</project>